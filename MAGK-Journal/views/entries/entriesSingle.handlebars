<div class="main-container">
    <section id="entries-single">

        <header>
            <div id="emotion-circle">
                <img src="{{emotion.iconPath}}" alt="{{emotion.name}}">
            </div>
            <div id="energy-bar">
                {{#each defaultEnergies}}
                <span class="energy-indicator {{energyLevel ../energy.value @index}}"></span>

                {{!--
                basically, this alternative is so that each indicator has its own color rather than one cohesive colour
                throughout the bar
                this goes hand in hand with the segment in the CSS
                --}}
                {{!-- <span class="energy-indicator {{energyLevel ../energy.value @index}} {{this.color}}"></span> --}}

                {{/each}}
                <p>{{energy.name}}</p>
            </div>
        </header>

        <div>
            <h1>{{entry.title}}</h1>
            <div id="entry-dates">
                <h4>{{formatDate entry.date}}</h4>
                {{#if entry.updatedOn}}
                <h4>Updated on: {{formatDate entry.updatedOn}}</h4>
                {{/if}}
            </div>
            <p class="notes">{{entry.notes}}</p>

            <div class="socact-container">
                <h2>Activities</h2>
                <ul>
                    {{#each activities}}
                    <li>{{this.name}}</li>
                    {{else}}
                    <li>No activities</li>
                    {{/each}}
                </ul>
            </div>
            <div class="socact-container">
                <h2>Socials</h2>
                <ul>
                    {{#each socials}}
                    <li>{{this.name}}</li>
                    {{else}}
                    <li>No social interactions</li>
                    {{/each}}
                </ul>
            </div>

            <div id="entry-buttons">
                <div>
                    <a href="/entries/{{entry._id}}/edit">Edit</a>
                </div>
                <form id="delete-form" action="/entries/{{entry._id}}/delete" method="POST">
                    <button type="submit" id="delete-button">Delete</button>
                </form>
            </div>
        </div>
    </section>  
</div>

<div id="delete-popup" class="popup">
    <div class="popup-content">
        <p>Are you sure you want to delete this entry?</p>
            <button id="confirm-delete">Yes, Delete</button>
            <button id="cancel-delete">No, Cancel</button>
    </div>
</div>

<script src="../../public/js/entries.js"></script>


